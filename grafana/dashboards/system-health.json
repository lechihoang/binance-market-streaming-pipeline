    {
      "id": 4,
      "title": "Messages/sec",
      "type": "timeseries",
      "datasource": {
        "type": "prometheus",
        "uid": "prometheus"
      },
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(kafka_topic_partition_current_offset[1m]))",
          "legendFormat": "Messages In (offset rate)"
